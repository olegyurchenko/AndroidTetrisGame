<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="end">
        <Button
            android:drawableTop="@drawable/ic_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPause"
            android:text=""
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:drawableTop="@drawable/ic_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUndo"
            android:text=""
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:drawableTop="@drawable/ic_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCreate"
            android:text=""
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:drawableTop="@drawable/ic_magic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMagic"
            android:text=""
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:baselineAligned="false"
        >

    <LinearLayout
        android:id="@+id/btnPanelLeft"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="1">


        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_left"
            android:id="@+id/btnLeft1">
        </Button>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_right"
            android:id="@+id/btnRight1">
        </Button>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_rotate"
            android:id="@+id/btnRotate1">
        </Button>

        <Button
            android:drawableTop="@drawable/ic_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDown1">
        </Button>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/draw_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnPanelRight"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_left"
            android:id="@+id/btnLeft2">
        </Button>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_right"
            android:id="@+id/btnRight2">
        </Button>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_rotate"
            android:id="@+id/btnRotate2">
        </Button>

        <Button
            android:drawableTop="@drawable/ic_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDown2">
        </Button>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
