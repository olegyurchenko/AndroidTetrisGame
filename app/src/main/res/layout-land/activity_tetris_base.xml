<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_level_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/ic_left"
                android:id="@+id/btnLeft1"
                android:contentDescription="@string/btn_left"
                />

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/ic_right"
                android:id="@+id/btnRight1"
                android:contentDescription="@string/btn_right"
                />

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/ic_rotate_right"
                android:id="@+id/btnRotate1"
                android:contentDescription="@string/btn_rotate"
                />

            <ImageButton
                android:src="@drawable/ic_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDown1"
                android:contentDescription="@string/btn_down"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnPause"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause"
                android:contentDescription="@string/pause"
                />

            <ImageButton
                android:id="@+id/btnUndo"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_undo"
                android:contentDescription="@string/undo"
            />

            <ImageButton
                android:id="@+id/btnCreate"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_create"
                android:contentDescription="@string/new_game"
                />

            <ImageButton
                android:id="@+id/btnMagic"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_magic"
                android:contentDescription="@string/select_game"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/draw_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnRobot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_robot"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:contentDescription="@string/btn_robot"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/ic_left"
                android:id="@+id/btnLeft2"
                android:contentDescription="@string/btn_left"
                />

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/ic_right"
                android:id="@+id/btnRight2"
                android:contentDescription="@string/btn_right"
                />

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/ic_rotate_right"
                android:id="@+id/btnRotate2"
                android:contentDescription="@string/btn_rotate"
                />

            <ImageButton
                android:src="@drawable/ic_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDown2"
                android:contentDescription="@string/btn_down"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>